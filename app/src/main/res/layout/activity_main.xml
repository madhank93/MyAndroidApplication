<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- Photo by Lorene Farrugia on Unsplash-->
    <ImageView
        android:id="@+id/birth_day_cake_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/birthday_cake" />

    <TextView
        android:text="Happy Birthday, Buddy!"
        android:textColor="@android:color/background_light"
        android:textSize="32sp"
        android:padding="20dp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <TextView
        android:text="From, Moj!"
        android:textColor="@android:color/background_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/birth_day_cake_image"
        android:fontFamily="sans-serif"
        android:textSize="32sp"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>